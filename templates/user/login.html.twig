{% extends 'base.html.twig'%}
{% block body %}
{% if error %}
<div class="alert-danger text-center">

    <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
</div>
{% endif %}
<h1>Formulaire de connexion</h1>
    <form method="post" action="{{path('login')}}">
        <div>
            <label>Email adresse</label>
            <input type="email" name="_username" class="form-control" value="{{ last_username }}" placeholder="Entrez votre Email adresse"/>
        </div>
        <div>
            <label>Password</label>
            <input type="password" name="_password" class="form-control" placeholder="Entrez votre mot de passe"/>
        </div>
        <button type="submit" class="btn btn-primary col-12">Connectez-vous</button>
    </form>
{% endblock %}